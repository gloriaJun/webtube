extends ../layouts/main.pug

block content
    .form--container
        form(action=`${routes.videos}${routes.videoEdit(video.id)}`, method="post")
            input(type="text", name="title", placeholder="Input file title", value=video.title, required=true)
            textarea(name="description", placeholder="Input Description")=video.description
            input(type="submit", value="Edit")
        a.form--contianer__link.form-container__link--delete(href=`${routes.videos}${routes.videoDelete(video.id)}`)
            button.delete Delete Video
