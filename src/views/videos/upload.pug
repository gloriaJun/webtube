extends ../layouts/main.pug

block content
    .form--container
        form(action=`${routes.videos}${routes.videoUpload}`, method="post", enctype="multipart/form-data")
            label(for="file") Video File
            input(type="file", id="file", name="videoFile", required=true, accept="video/*")
            input(type="text", name="title", placeholder="Input file title", required=true)
            textarea(name="description", placeholder="Input Description")
            input(type="submit", value="Upload")
